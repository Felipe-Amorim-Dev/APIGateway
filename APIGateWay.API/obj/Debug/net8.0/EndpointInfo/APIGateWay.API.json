{
  "openapi": "3.0.1",
  "info": {
    "title": "APIGateWay.API",
    "version": "1.0"
  },
  "paths": {
    "/auth/token": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginRequestDto": {
        "required": [
          "nomeUsuario",
          "senha"
        ],
        "type": "object",
        "properties": {
          "nomeUsuario": {
            "minLength": 1,
            "type": "string"
          },
          "senha": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}